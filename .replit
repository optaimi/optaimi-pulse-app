hidden = [".config", "package-lock.json", ".next", ".swc"]
modules = ["nodejs-22"]

[nix]
channel = "stable-24_11"

[env]
NEXT_TELEMETRY_DISABLED = "1"

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"
  [[workflows.workflow.tasks]]
  task = "workflow.run"
  args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"
  [[workflows.workflow.tasks]]
  task = "shell.exec"
  args = "npm run dev -- -p 5000"
  waitForPort = 5000
  [workflows.workflow.metadata]
  outputType = "webview"
